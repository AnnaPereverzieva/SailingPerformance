            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


            <Slider Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="10" 
                    Cursor="Hand"/>
            <Label Grid.Column="0" HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Content="0"/>
            <Label Grid.Column="2" HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Content="100"/>


        <Button VerticalAlignment="Center"
                    Grid.Column="3"
                    Height="30" 
                    Width="30" 
                    BorderThickness="2"
                    BorderBrush="Transparent"
                    x:Name="BtnLessWind">
            <Image Source="pack://application:,,,/Images/oneLess.jpg"/>
        </Button>
        <Button VerticalAlignment="Center"
                    Grid.Column="4"
                    Height="30" 
                    Width="30" 
                    BorderThickness="2"
                    BorderBrush="Transparent"
                    x:Name="BtnMoreWind">
            <Image Source="pack://application:,,,/Images/oneMore.jpg"/>
        </Button>



        <Label Grid.Column="1" Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Content="Siła wiatru [m/s]: "
               Margin="20,0,0,0"/>
        <TextBox Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" TextAlignment="Left" />


