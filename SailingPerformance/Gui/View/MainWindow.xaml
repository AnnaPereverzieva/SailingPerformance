<controls:MetroWindow x:Class="Gui.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:oxy="http://oxyplot.org/wpf"
                      xmlns:localFlyouts="clr-namespace:Gui.View.UserControls.Flyouts"
                      Title="Sailing performance"
                      MinWidth="860"
                      MinHeight="560"
                      mc:Ignorable="d"
                      ShowIconOnTitleBar="True"
                      BorderThickness="2"
                      BorderBrush="{StaticResource AccentColorBrush}"
                      GlowBrush="{StaticResource AccentColorBrush}"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize">

    <controls:MetroWindow.Resources>
        <Style x:Key="CbxProperties" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style x:Key="LblProperties" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource CbxProperties}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource CbxProperties}"/>
        <Style TargetType="Label" BasedOn="{StaticResource LblProperties}"/>


    </controls:MetroWindow.Resources>

    <controls:MetroWindow.Flyouts>
        <controls:FlyoutsControl>
            <controls:Flyout x:Name="FlyoutDataSelection"
                             Position="Right"
                             Header="Filtrowanie danych"
                             Width="Auto">
                <localFlyouts:DataSelectionFlyout/>
            </controls:Flyout>

            <controls:Flyout x:Name="FlyoutWindSelection"
                             Position="Right"
                             Header="Kierunek i siła wiatru"
                             Width="Auto">
                <localFlyouts:WindSelectionFlyout/>
            </controls:Flyout>

            <controls:Flyout x:Name="FlyoutExportImport"
                             Position="Right"
                             Header="Export i import danych"
                             Width="Auto">
                <localFlyouts:ExportImportFlyout/>
            </controls:Flyout>
        </controls:FlyoutsControl>
    </controls:MetroWindow.Flyouts>




    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".4*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderThickness="3" BorderBrush="Red" Margin="5"/>
        <oxy:Plot Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"         
                  x:Name="Plot1"
                  Title="A Graph"

                  Margin="10"
                  Model="{Binding ChartViewModel.PlotModel,
                                  UpdateSourceTrigger=PropertyChanged,
                                  Mode=TwoWay}" />
        <DockPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Label Content="Optymalny kurs [deg]:"/>
            <TextBox x:Name="TxbOptCourse" Width="Auto"
                     Text="{Binding OpitmalCourse}" IsReadOnly="True"/>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.RowSpan="4" Margin="0,0,30,0" >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <ToggleButton x:Name="BtnDataSelection"
                              Grid.Row="0"
                              Content="Wybór danych"
                              FontSize="12"
                              IsChecked="{Binding ElementName=FlyoutDataSelection, Path=IsOpen}" Cursor="Hand">
                    <ToggleButton.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </ToggleButton.LayoutTransform>
                </ToggleButton>
                <ToggleButton Grid.Row="1"
                              x:Name="BtnWindSelection"
                              Content="Parametry wiatru"
                              FontSize="12"
                              IsChecked="{Binding ElementName=FlyoutWindSelection, Path=IsOpen}" Cursor="Hand">
                    <ToggleButton.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </ToggleButton.LayoutTransform>

                </ToggleButton>
                <ToggleButton Grid.Row="2"
                              x:Name="BtnExportImport"
                              Content="Export/Import danych"
                              FontSize="12"
                              IsChecked="{Binding ElementName=FlyoutExportImport, Path=IsOpen}" Cursor="Hand">
                    <ToggleButton.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </ToggleButton.LayoutTransform>

                </ToggleButton>
            </Grid>
        </DockPanel>

