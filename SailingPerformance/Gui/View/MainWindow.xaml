<controls:MetroWindow x:Class="Gui.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:oxy="http://oxyplot.org/wpf"
                      Title="Sailing performance"
                      MinWidth="860"
                      MinHeight="560"
                      mc:Ignorable="d"
                      ShowIconOnTitleBar="True"
                      BorderThickness="2"
                      BorderBrush="{StaticResource AccentColorBrush}"
                      GlowBrush="{StaticResource AccentColorBrush}"
                      WindowStartupLocation="CenterScreen"
                      ResizeMode="CanResize">

    <controls:MetroWindow.Resources>
        <Style x:Key="CbxProperties" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        <Style x:Key="LblProperties" TargetType="{x:Type Control}">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource CbxProperties}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource CbxProperties}"/>
        <Style TargetType="Label" BasedOn="{StaticResource LblProperties}"/>


    </controls:MetroWindow.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.RowSpan="2" BorderThickness="3" BorderBrush="Red" Margin="5"/>
        <oxy:Plot Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"         
                  x:Name="Plot1"
                  Title="A Graph"

                  Margin="10"
                  Model="{Binding ChartViewModel.PlotModel,
                                  UpdateSourceTrigger=PropertyChanged,
                                  Mode=TwoWay}" />
        <DockPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Label Content="Optymalny kurs [deg]:"/>
            <TextBox x:Name="TxbOptCourse" Width="Auto"
                     Text="{Binding OpitmalCourse}" IsReadOnly="True"/>
        </DockPanel>

        <DockPanel Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" VerticalAlignment="Bottom" Content="Nazwa łodzi:"/>
                <ComboBox Grid.Row="1"
                      VerticalAlignment="Top"
                      x:Name="CbxBoat"
                      ItemsSource="{Binding BoatList}"
                      SelectedIndex="{Binding SelectedIndexBoat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Grid.Row="2" VerticalAlignment="Bottom" Content="Data, zakres od:"/>
                <ComboBox x:Name="CbxDateFrom"
                      Grid.Row="3"
                      VerticalAlignment="Top"
                      ItemsSource="{Binding DateList}"
                      SelectedIndex="{Binding SelectedIndexDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Grid.Row="4" VerticalAlignment="Bottom" Content="Data, zakres do:"/>
                <ComboBox x:Name="CbxDate"
                      Grid.Row="5"
                      VerticalAlignment="Top"
                      ItemsSource="{Binding DateList}"
                      SelectedIndex="{Binding SelectedIndexDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Grid.Row="6" VerticalAlignment="Bottom" Content="Nr sesji:"/>
                <ComboBox x:Name="CbxSession"
                      Grid.Row="7"
                      VerticalAlignment="Top"
                      ItemsSource="{Binding SessionList}"
                      SelectedIndex="{Binding SelectedIndexDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="22"/>
            </Grid>
        </DockPanel>

        <DockPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Border>
                    <ToggleButton x:Name="BtnImportFromExcel"
                            Margin="5"
                            Grid.Row="0"
                            DockPanel.Dock="Top"
                            VerticalAlignment="Stretch"
                            Command="{Binding ImportExcelDataCommand}">
                        <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="Bold">Importuj dane z Excela</TextBlock>
                    </ToggleButton>
                </Border>
                <Border Grid.Row="1">
                    <ToggleButton x:Name="BtnExportToExcel"
                            Margin="5"
                            
                            DockPanel.Dock="Top"
                            VerticalAlignment="Stretch"
                            Command="{Binding SaveToExlsCommand}">
                        <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="Bold">Exportuj dane do Excela</TextBlock>
                    </ToggleButton>
                </Border>
                <Border Grid.Row="2">
                    <ToggleButton x:Name="BtnSaveToExcel"
                            Margin="5"
                            
                            DockPanel.Dock="Top"
                            VerticalAlignment="Stretch"
                            Command="{Binding SaveToExlsCommand}">
                        <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="Bold">Generuj raport .doc</TextBlock>
                    </ToggleButton>
                </Border>
            </Grid>
        </DockPanel>
        <DockPanel Grid.Column="1" Grid.Row="2" VerticalAlignment="Top" Margin="0,0,10,0">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <Slider Grid.Column="0" DockPanel.Dock="Bottom"
                        Margin="10,0,0,0"
                        TickPlacement="BottomRight"
                        TickFrequency="{Binding }"/>
                    <DockPanel DockPanel.Dock="Top" Margin="10,2,0,2">
                        <Label HorizontalAlignment="Left"
                               Padding="0"/>
                        <Label HorizontalAlignment="Right"
                               Padding="0"/>
                    </DockPanel>                    
                </DockPanel>
                <Button Grid.Column="1"
                        Height="30" 
                        Width="30" 
                        x:Name="BtnLessWind"
                        BorderThickness="2"
                        BorderBrush="Transparent">
                    <Image Source="pack://application:,,,/Images/oneLess.jpg"/>
                </Button>
                <Button Grid.Column="2"
                        Height="30" 
                        Width="30" 
                        BorderThickness="2"
                        BorderBrush="Transparent"
                        x:Name="BtnMoreWind">
                    <Image Source="pack://application:,,,/Images/oneMore.jpg"/>
                </Button>
            </Grid>
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Siła wiatru [m/s]: "
                       Margin="20,0,0,0" />
                <TextBox Grid.Column="1" TextAlignment="Left" />
            </Grid>
        </DockPanel>
        <DockPanel Grid.Column="2" Grid.Row="2" VerticalAlignment="Top" Margin="0,0,10,0">
            <Grid DockPanel.Dock="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <DockPanel>
                    <Slider Grid.Column="0" DockPanel.Dock="Bottom"
                        Margin="10,0,0,0"
                        TickPlacement="BottomRight"
                        TickFrequency="{Binding }"/>
                    <DockPanel DockPanel.Dock="Top" Margin="10,2,0,2">
                        <Label HorizontalAlignment="Left"
                               Padding="0"/>
                        <Label HorizontalAlignment="Right"
                               Padding="0"/>
                    </DockPanel>
                </DockPanel>
                <Button Grid.Column="1"
                        Height="30" 
                        Width="30" 
                        x:Name="BtnLessDegWind"
                        BorderThickness="2"
                        BorderBrush="Transparent">
                    <Image Source="pack://application:,,,/Images/oneLess.jpg"/>
                </Button>
                <Button Grid.Column="2"
                        Height="30" 
                        Width="30" 
                        BorderThickness="2"
                        BorderBrush="Transparent"
                        x:Name="BtnMoreDegWind">
                    <Image Source="pack://application:,,,/Images/oneMore.jpg"/>
                </Button>
            </Grid>
            <Grid DockPanel.Dock="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Kierunek wiatru [deg]: "
                       Margin="20,0,0,0" />
                <TextBox Grid.Column="1" TextAlignment="Left" />
            </Grid>
        </DockPanel>


        <DockPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="3">
            <ToggleButton x:Name="BtnDrawGraph"   
                        Margin="100,15,100,15"
                        Command="{Binding DrawAction}">
                <TextBlock TextWrapping="Wrap" FontSize="12" FontWeight="Bold">Rysuj wykres</TextBlock>
            </ToggleButton>


        </DockPanel>

    </Grid>
</controls:MetroWindow>
